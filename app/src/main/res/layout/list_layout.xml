<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_recipeImage"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher"
            />

        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_recipeImage"
            android:layout_toRightOf="@id/list_recipeImage"
            android:layout_margin="5dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/list_recipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Recipe Name"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/list_recipeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_recipeName"
                android:text="Recipe Type"/>

            <TextView
                android:id="@+id/list_recipeIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_recipeType"
                android:text="Recipe Description"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/list_recipeSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_recipeIngredient"
                android:text="Recipe Description"
                android:maxLines="1"/>

        </RelativeLayout>
</RelativeLayout>